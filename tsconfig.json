{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",

		"declaration": true,
		"sourceMap": true,

		"outDir": "./lib",
		"rootDir": "./src",

		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true
  }
}
