{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["esnext"],

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"outDir": "dist",
		"rootDir": "src",
		"removeComments": false,
		"stripInternal": true,

		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,

		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"esModuleInterop": true
	}
}
